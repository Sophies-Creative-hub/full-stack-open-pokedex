name: Create Pull Request
on:
  push:
    branches:
      - automate

jobs:
  create_pull_request:
    runs-on: ubuntu-latest
    steps:
    - name: Check Out Repository
      uses: actions/checkout@v2

    - name: Create Pull Request
      uses: peter-evans/create-pull-request@v3
      with:
        token: ${{ secrets.GITHUB_TOKEN }}
        branch: automate
        title: "Ihre PR-Überschrift"
        body: "Ihre PR-Beschreibung"
        base: "master" # Der Zweig, in den die Änderungen gemerged werden sollen